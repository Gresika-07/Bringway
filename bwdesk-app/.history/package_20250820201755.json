{
  "name": "bwdesk-app",
  "version": "0.1.0",
  "private": true,
  "description": "BWDesk Desktop Application",
  "author": "Gresika",
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron-dev": "concurrently \"npm run dev\" \"electron .\"",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.bwdesk.app",
    "productName": "BWDesk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "next": "15.2.4",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "concurrently": "^8.2.2"
  }
}
